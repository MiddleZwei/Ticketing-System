<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">


<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>

        <property name="show_sql">true</property>
        <property name="format_sql">false</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/mas</property>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>

        <property name="connection.password">admin</property>
        <property name="connection.username">root</property>

        <mapping resource="Address.hbm.xml"/>
        <mapping class="com.s15920.model.Address"/>
        <mapping resource="Cashier.hbm.xml"/>
        <mapping class="com.s15920.model.Cashier"/>
        <mapping resource="Checkin.hbm.xml"/>
        <mapping class="com.s15920.model.Checkin"/>
        <mapping resource="Concert.hbm.xml"/>
        <mapping class="com.s15920.model.Concert"/>
        <mapping resource="Employment.hbm.xml"/>
        <mapping class="com.s15920.model.Employment"/>
        <mapping resource="Employmenttype.hbm.xml"/>
        <mapping class="com.s15920.model.Employmenttype"/>
        <mapping resource="Manager.hbm.xml"/>
        <mapping class="com.s15920.model.Manager"/>
        <mapping resource="Musician.hbm.xml"/>
        <mapping class="com.s15920.model.Musician"/>
        <mapping resource="Person.hbm.xml"/>
        <mapping class="com.s15920.model.Person"/>
        <mapping resource="Purchase.hbm.xml"/>
        <mapping class="com.s15920.model.Purchase"/>
        <mapping resource="Seat.hbm.xml"/>
        <mapping class="com.s15920.model.Seat"/>
        <mapping resource="Ticket.hbm.xml"/>
        <mapping class="com.s15920.model.Ticket"/>


    </session-factory>
</hibernate-configuration>